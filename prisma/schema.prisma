generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  peso Float
  altura Float
  genero String
  fator_atividade Float
  imc IMC?
  jantar Jantar?
  cafe Cafe?
  lanche_manha Lanche_manha?
  almoco Almoco?
  lanche_tarde Lanche_tarde?
  exerSegunda ExerSegunda?
  exerTerca ExerTerca?
  exerQuarta ExerQuarta?
  exerQuinta ExerQuinta?
  exerSexta ExerSexta?
  exerSabado ExerSabado?
  exerDomingo ExerDomingo?
}

model IMC{
  id Int @id @default(autoincrement())
  id_usuario Int @unique
  valor Float
  usuario Usuario @relation(fields: [id_usuario], references: [id])
}



